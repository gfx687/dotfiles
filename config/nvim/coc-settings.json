{
    "coc.preferences.bracketEnterImprove": true,
    "suggest.floatConfig.border": true,
    "diagnostic.floatConfig.border": true,
    "signature.floatConfig.border": true,
    "hover.floatConfig.border": true,
    "diagnostic.format": "[%severity] %message [%source%code]",
    "diagnostic.infoSign": "--",
    "diagnostic.errorSign": ">>",
    "diagnostic.checkCurrentLine": true,
    "languageserver": {
        "go": {
            "command": "gopls",
            "rootPatterns": [
                "go.work",
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ],
            "initializationOptions": {
                "usePlaceholders": true
            }
        }
    },
    "go.goplsOptions": {
        "gofumpt": false,
    },
    "python.pythonPath": "python3"
}
