{
    "suggest.enablePreselect": false,
    "coc.preferences.bracketEnterImprove": true,
    "suggest.floatConfig.border": true,
    "diagnostic.floatConfig.border": true,
    "signature.floatConfig.border": true,
    "hover.floatConfig.border": true,
    "diagnostic.format": "[%severity] %message [%source%code]",
    "diagnostic.infoSign": "--",
    "diagnostic.errorSign": ">>",
    "diagnostic.warningSign": "??",
    "diagnostic.checkCurrentLine": true,
    "snippets.excludePatterns": [
        "$HOME/.vim/plugged/vim-go/gosnippets/UltiSnips/go.snippets"
    ],
    "snippets.loadFromExtensions": false,
    "snippets.ultisnips.directories": [
        "$HOME/dotfiles/vimrc.d/ultisnips"
    ],
    "coc.preferences.formatOnSaveFiletypes": [
        "go",
        "python"
    ],
    "languageserver": {
        "go": {
            "command": "gopls",
            "rootPatterns": [
                "go.work",
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ],
            "initializationOptions": {
                "usePlaceholders": true
            }
        }
    },
    "go.goplsOptions": {
        "gofumpt": false
    },
    "python.pythonPath": "python3",
    "python.formatting.provider": "yapf",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true
}
